<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Resume">

	<resultMap type="ResumeDto" id="resumeList">
		<result property="m_no" column="M_NO" />
		<result property="r_no" column="R_NO" />
		<result property="r_title" column="R_TITLE" />
		<result property="r_regdate" column="R_REGDATE" />
	</resultMap>

	<!-- 이력서 목록 조회 -->
	<select id="resumeList" resultMap="resumeList">
		SELECT A.M_NO, R_NO, R_TITLE, R_REGDATE
		FROM IT_MEMBER A
		LEFT JOIN M_RESUME B
		ON A.M_NO=B.M_NO
		WHERE
		A.M_NO = #{m_no}
	</select>

	<!-- 이력서 조회 
	SELECT A.M_NO, M_ID, M_PW, M_NICKNAME, M_EMAIL, M_IMG_PATH, M_IMG, B.M_REGNO, B.M_ADMIN_CERT, A.M_PHONE
		FROM IT_MEMBER A
		LEFT JOIN BIZ_MEMBER B
		ON A.M_NO=B.M_NO
		WHERE A.M_NO = #{m_no}		
	
	<resultMap type="ResumeDto" id="resumeDetail">
		<result property="m_no" column="M_NO" />
		<result property="r_no" column="R_NO" />
		<result property="r_title" column="R_TITLE" />
		<result property="r_postcode" column="R_POSTCODE" />
		<result property="r_roadAddress" column="R_ROADADDRESS" />
		<result property="r_jibunAddress" column="R_JIBUNADDRESS" />
		<result property="r_detailAddress" column="R_DETAILADDRESS" />
		<result property="r_extraAddress" column="R_EXTRAADDRESS" />
		<result property="r_selfletter" column="R_SELFLETTER" />
		<result property="r_portfolio" column="R_PORTFOLIO" />
		<result property="r_img" column="R_IMG" />
		<result property="r_img_path" column="R_IMG_PATH" />
		<result property="r_regdate" column="R_REGDATE" />
		<result property="m_email" column="M_EMAIL" />
		<result property="m_phone" column="M_PHONE" />
		<result property="m_name" column="M_NAME" />
		<result property="m_birth" column="M_BIRTH" />
		<result property="m_gender" column="M_GENDER" />
	</resultMap>
	
	<select id="resumeDetail" resultType="ResumeDto" parameterType="int">
		SELECT *
		FROM M_RESUME A
		LEFT JOIN IT_MEMBER B
		ON A.M_NO = B.M_NO
		WHERE A.R_NO = #{r_no}
	</select>
	-->
	
	<!-- 이력서 기본정보 조회(detail) -->
	<select id="resumeDetail" resultType="ResumeDetailDto" parameterType="int">
		SELECT *
		FROM M_RESUME
		WHERE R_NO = #{r_no}
	</select>
	
	<!-- 이력서 학력사항 조회(list) -->
	<select id="educationList" resultType="EducationDto" parameterType="int">
		select * 
		from EDUCATION 
		where m_no = #{m_no}
		order by ed_no
	</select>

	<!--이력서 등록 -->
	<update id="resumeInsert">

	</update>

	<!-- 이력서 사진 업로드 -->
	<update id="uploadProfile" parameterType="ResumeProfileDto">
		UPDATE M_RESUME
		SET R_IMG=#{r_img},
			R_IMG_PATH=#{r_img_path}
		WHERE M_NO=#{m_no}
	</update>
	
	<!-- 이력서 삭제 -->
	<delete id="resumeDelete" parameterType="int">
		DELETE
		FROM M_RESUME
		WHERE R_NO = #{r_no}
	</delete>

</mapper>