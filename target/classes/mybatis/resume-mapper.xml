<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="Resume">

	<resultMap type="ArrayList" id="resumeMap">
		<result property="m_no" column="M_NO" />
		<result property="r_no" column="R_NO" />
		<result property="r_title" column="R_TITLE"/>
		<result property="r_regdate" column="R_REGDATE"/>
	</resultMap>

	<!-- 이력서 목록 조회 -->
	<select id="selectList" resultMap="resumeMap">
		SELECT A.M_NO, R_NO, R_TITLE, R_REGDATE
		FROM IT_MEMBER A
		LEFT JOIN M_RESUME B
		ON A.M_NO=B.M_NO
		WHERE A.M_NO = #{m_no}";
	</select>
	
	<select id="selectlistcnt" resultType="int">
		SELECT COUNT(R_NO)
		FROM M_RESUME
		WHERE R_NO=1
	</select>

	<!--이력서 등록 -->
	<update id="resumeInsert">

	</update>

	<!-- 이력서 사진 업로드 -->
	<update id="uploadProfile" parameterType="ProfileDto">
		UPDATE R_RESUME
		SET
		M_IMG = #{r_img}, M_IMG_PATH = #{r_img_path}
		WHERE R_NO = #{r_no}
	</update>

</mapper>