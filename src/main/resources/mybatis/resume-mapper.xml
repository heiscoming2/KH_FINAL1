<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Resume">

	<resultMap type="ResumeDto" id="resumeList">
		<result property="m_no" column="M_NO" />
		<result property="r_no" column="R_NO" />
		<result property="r_title" column="R_TITLE" />
		<result property="r_regdate" column="R_REGDATE" />
	</resultMap>

	<!-- 이력서 목록 조회 -->
	<select id="resumeList" resultMap="resumeList">
		SELECT A.M_NO, R_NO, R_TITLE, R_REGDATE
		FROM IT_MEMBER A
		LEFT JOIN M_RESUME B
		ON A.M_NO=B.M_NO
		WHERE
		A.M_NO = #{m_no}
	</select>
	
	<!-- 이력서 기본정보 조회(detail) -->
	<select id="resumeDetail" resultType="ResumeDetailDto" parameterType="int">
		SELECT *
		FROM M_RESUME
		WHERE R_NO = #{r_no}
	</select>
	
	<!-- 이력서 학력사항 조회(list) -->
	<select id="educationList" resultType="EducationDto" parameterType="int">
		SELECT * 
		FROM EDUCATION 
		WHERE M_NO = #{m_no} 
		ORDER BY ED_NO
	</select>
	
	<!-- 이력서 자격사항 조회(list) -->
	<select id="licenceList" resultType="LicenceDto" parameterType="int">
		SELECT * 
		FROM LICENCE 
		WHERE M_NO = #{m_no}
		ORDER BY LI_NO
	</select>
	
	<!-- 이력서 교육 및 사회경험 조회(list) -->
	<select id="careerList" resultType="CareerDto" parameterType="int">
		SELECT * 
		FROM CAREER 
		WHERE M_NO = #{m_no}
		ORDER BY CA_NO
	</select>

	<!--이력서 등록 -->
	<update id="resumeInsert">

	</update>

	<!-- 이력서 사진 업로드 -->
	<update id="uploadProfile" parameterType="ResumeProfileDto">
		UPDATE M_RESUME
		SET R_IMG=#{r_img},
			R_IMG_PATH=#{r_img_path}
		WHERE M_NO=#{m_no}
	</update>
	
	<!-- 이력서 삭제 -->
	<delete id="resumeDelete" parameterType="int">
		DELETE
		FROM M_RESUME
		WHERE R_NO = #{r_no}
	</delete>
	
	<!-- 이력서 선택 삭제 -->
	<delete id="resumeChkDel" parameterType="int">
		DELETE
		FROM M_RESUME
		WHERE R_NO = #{r_no}
	</delete>

</mapper>